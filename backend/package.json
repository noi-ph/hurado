{
  "name": "hurado-backend",
  "version": "1.0.0",
  "description": "Hurado backend server",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noiph/hurado"
  },
  "scripts": {
    "sql": "docker exec -it postgres sh -c 'PGPASSWORD=$POSTGRES_PASSWORD psql $POSTGRES_DB -U $POSTGRES_USER'",
    "dev": "cross-env NODE_PATH=./src DOTENV=development.env npx ts-node-dev --respawn src/index.ts",
    "db:seed": "ts-node src/orm/seeds/seed-main.ts",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run --dataSource ./src/orm/data-source.ts",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert --dataSource ./src/orm/data-source.ts",
    "migration:generate": "ts-node ./node_modules/.bin/typeorm migration:generate --pretty --dataSource ./src/orm/data-source.ts",
    "migration:create": "ts-node ./node_modules/.bin/typeorm migration:create --dataSource ./src/orm/data-source.ts -n ",
    "openapi:generate": "./scripts/generate-openapi.sh",
    "build": "rimraf dist && tsc",
    "lint": "eslint --max-warnings 0 && ./scripts/dev-run.sh tsc --noEmit",
    "lint-fix": "eslint --fix",
    "lint-staged-husky": "lint-staged",
    "format-lint": "prettier --config .prettierrc -l --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown .",
    "test": "NODE_PATH=./src mocha --require ts-node/register 'src/**/*.test.ts' --timeout 20000 --exit"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "express": "4.17.3",
    "express-async-errors": "3.1.1",
    "helmet": "5.0.2",
    "jsonwebtoken": "8.5.1",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "pg": "8.7.3",
    "reflect-metadata": "0.1.13",
    "swagger-ui-express": "4.5.0",
    "typeorm": "0.3.7",
    "typeorm-naming-strategies": "4.1.0",
    "validator": "13.7.0",
    "yup": "1.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/body-parser": "1.19.2",
    "@types/chai": "4.3.1",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jsonwebtoken": "8.5.8",
    "@types/mocha": "9.1.1",
    "@types/morgan": "1.9.3",
    "@types/multer": "1.4.7",
    "@types/node": "17.0.33",
    "@types/supertest": "2.0.12",
    "@types/validator": "13.7.2",
    "@typescript-eslint/eslint-plugin": "5.23.0",
    "@typescript-eslint/parser": "5.23.0",
    "chai": "4.3.6",
    "dotenv": "16.0.1",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-no-array-reduce": "1.0.58",
    "eslint-plugin-prettier": "4.0.0",
    "mocha": "9.2.2",
    "nyc": "15.1.0",
    "openapi-typescript": "5.4.1",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "supertest": "6.2.2",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "tsc-files": "1.1.3",
    "typescript": "4.6.4"
  }
}
