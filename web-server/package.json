{
  "name": "hurado-server",
  "version": "1.0.0",
  "description": "Hurado backend server",
  "scripts": {
    "servers": "docker-compose --file docker-compose.dev.yml up",
    "backend:bash": "docker exec -it backend bash",
    "backend:seed": "./scripts/dev-run.sh ts-node src/orm/seeds/seed-main.ts",
    "sql": "docker exec -it postgres sh -c 'PGPASSWORD=$POSTGRES_PASSWORD psql $POSTGRES_DB -U $POSTGRES_USER'",
    "migration:run": "./scripts/dev-run.sh ts-node ./node_modules/typeorm/cli.js migration:run --dataSource ./src/orm/data-source.ts",
    "migration:revert": "./scripts/dev-run.sh ts-node ./node_modules/typeorm/cli.js migration:revert --dataSource ./src/orm/data-source.ts",
    "migration:generate": "./scripts/dev-run.sh ts-node ./node_modules/.bin/typeorm migration:generate --pretty --dataSource ./src/orm/data-source.ts -n ",
    "migration:create": "./scripts/dev-run.sh ts-node ./node_modules/.bin/typeorm migration:create --dataSource ./src/orm/data-source.ts -n ",
    "openapi:generate":  "./scripts/generate-openapi.sh",
    "build": "rimraf dist && tsc",
    "prepare": "cd .. && husky install web-server/.husky",
    "lint": "./scripts/dev-run.sh eslint --max-warnings 0 && ./scripts/dev-run.sh tsc --noEmit",
    "lint-fix": "eslint --fix",
    "lint-staged-husky": "lint-staged",
    "format-lint": "prettier --config .prettierrc -l --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown .",
    "test": "NODE_PATH=./src mocha --require ts-node/register 'src/**/*.test.ts' --timeout 20000 --exit"
  },
  "dependencies": {
    "and": "^0.0.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.7",
    "typeorm-naming-strategies": "^4.0.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.33",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chai": "^4.3.6",
    "commitizen": "^4.2.4",
    "dotenv": "^16.0.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-array-reduce": "^1.0.58",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "openapi-typescript": "^5.4.1",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.2",
    "ts-node": "10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsc-files": "^1.1.3",
    "typescript": "4.6.4"
  }
}
