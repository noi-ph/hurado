{
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "target": "ES6",
            "module": "Node16",
            "moduleResolution": "Node16"
        },
        "include": [
            "**/*.ts"
        ]
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "jsx": "preserve",

        "paths": {
            "@root/*": [ "app/*" ],
            "@v1/*": [ "app/api/v1/*" ],
        },
        "baseUrl": "src",

        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "allowJs": true,
        "skipLibCheck": true,

        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "src",
        "next-env.d.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": []
}
